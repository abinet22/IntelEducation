                                <label class="control-label">Address</label>
                                <input required="required" class="form-control" name="address" id="address" placeholder="Enter your address">
                              </div>
                              <button class="btn btn-primary nextBtn btn-sm pull-right mt-4" type="button">Next</button>
                            </div>
                          </div>
